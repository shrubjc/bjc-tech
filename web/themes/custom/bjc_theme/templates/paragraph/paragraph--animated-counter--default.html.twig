<div class="stat slick-slide">
{% set unit_position = content.field_unit_position['#items'].getString() %}
    {% if unit_position == 1 %}
    <h2>
        <span>{{ content.field_stat_unit }}</span>
        <span class="number">
            <div class="counter-value" data-count="{{ content.field_stat_number.0 }}" data-duration="8000">0</div>
        </span>
    </h2>
    {% endif %}
    {% if unit_position == 2 %}
        <h2>
            <span class="number">
                <div class="counter-value" data-count="{{ content.field_stat_number.0 }}" data-duration="8000">0</div>
            </span>
            <span>{{ content.field_stat_unit }}</span>
        </h2>
    {% endif %}
    <p>{{ content.field_stat_label }}</p>
</div>